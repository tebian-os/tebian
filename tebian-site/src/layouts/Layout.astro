<style is:global>
	:root {
		--bg: #303446;
		--text: #c6d0f5;
		--accent: #89b4fa;
	}

	html, body {
		margin: 0;
		padding: 0;
		min-height: 100%;
		background: var(--bg);
		font-family: 'JetBrains Mono', monospace;
		color: var(--text);
		overflow-x: hidden;
	}

	* { box-sizing: border-box; }

	/* Dark theme (Mocha) */
	html[data-theme="dark"] body,
	html[data-theme="dark"] { background: #1e1e2e; color: #cdd6f4; }

	/* Light theme (Latte) */
	html[data-theme="light"] body,
	html[data-theme="light"] { background: #eff1f5; color: #4c4f69; }

	/* Frappe theme */
	html[data-theme="frappe"] body,
	html[data-theme="frappe"] { background: #303446; color: #c6d0f5; }
</style>
